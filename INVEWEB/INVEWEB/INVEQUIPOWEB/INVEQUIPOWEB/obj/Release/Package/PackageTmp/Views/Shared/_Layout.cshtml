<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Inventario de Equipos WEB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://allyoucan.cloud/cdn/icofont/1.0.1/icofont.css" integrity="sha384-jbCTJB16Q17718YM9U22iJkhuGbS0Gd2LjaWb4YJEZToOPmnKDjySVa323U+W7Fv" crossorigin="anonymous">

    <link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body>

    <div class="navbar navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SISINVEQUIPO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="btn-group dropend">
                        <a href="#" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-book"></i> Catálogos
                            <b class="caret"></b>
                        </a>
                        <ul role="menu" class="dropdown-menu">
                            <li>@Html.ActionLink("Listado de Equipos Tecnologicos", "tblEquipoListar", "tblEquipo")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Listado de Ficha Personal", "tblPersonasListar", "tblPersonas")</li>
            
                        </ul>

                    </li>

                    <li class="btn-group dropend">
                        <a href="#" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-handshake"></i> Reuniones
                            <b class="caret"></b>
                        </a>
                        <ul role="menu" class="dropdown-menu">
                            <li>@Html.ActionLink("Listado de Eventos Realizados", "tblReunionListar", "tblReunion")</li>
                            <li class="divider"></li>
                        </ul>
                    </li>

                
                    <li class="dropdown">
                        <a href="#" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-users-cog"></i>  Administración de Usuarios
                            <b class="caret"></b>
                        </a>
                        <ul role="menu" class="dropdown-menu">
                            <li>@Html.ActionLink("Roles", "Index", "Roles")</li>
                            <li class="divider"></li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                    @*<li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - MINREX</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="~/Scripts/jquery.dataTables.js"></script>
        <script src="~/Scripts/jquery.dataTables.min.js"></script>*@
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/ini.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#grid').DataTable({
                "lengthMenu": [[10, 25, 50, 100, 200, -1], [10, 25, 50, 100, 200, "All"]],
                "pageLength": 200
            });
        });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>
